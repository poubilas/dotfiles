bindsym XF86AudioRaiseVolume exec "pamixer -ui 3 && pamixer --get-volume > /tmp/xobpipe"
bindsym XF86AudioLowerVolume exec "pamixer -ud 3 && pamixer --get-volume > /tmp/xobpipe"
# mute sound
bindsym XF86AudioMute exec "amixer sset Master toggle | sed -En '/\[on\]/ s/.*\[([0-9]+)%\].*/\1/ p; /\[off\]/ s/.*/0/p' | head -1 > /tmp/xobpipe"

# Lautstärkeregelung: Ctrl + Up: Lauter, Ctrl + Down: Leiser, Ctrl + Left: Stumm.

bindsym control+Up exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5%
bindsym control+Down exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5%
bindsym control+Left exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle


bindsym $mod+Shift+p exec gnome-calculator
